<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"
        tools:context=".SignUp">

    <TextView
            android:text="Log In"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/LogIn"
            android:textSize="34sp" android:fontFamily="@font/ubuntu_bold"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintBottom_toTopOf="@+id/WelcomeBack"/>
    <TextView
            android:text="Welcome Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/WelcomeBack"
            android:textColor="#FFFFFF" android:fontFamily="@font/ubuntu_medium"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/LogIn"
            app:layout_constraintBottom_toTopOf="@+id/email" android:textSize="24sp"/>
    <Button
            android:layout_width="233dp"
            android:layout_height="61dp" android:id="@+id/continueButton"
            android:backgroundTint="#F5A522" android:text="Continue"
            app:cornerRadius="100px"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="91dp" android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/password" android:textSize="24sp"/>
    <Button
            android:layout_width="168dp"
            android:layout_height="56dp" android:id="@+id/forgotpassword"
            android:backgroundTint="#F5A522" android:text="Forgot Password"
            app:cornerRadius="100px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/continueButton"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="24dp" android:textSize="16sp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Email"
            android:ems="10"
            android:id="@+id/email"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="246dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="440dp" android:textSize="24sp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password"
            android:hint="Password" android:textColor="#000000"
            style="@style/Widget.AppCompat.EditText"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="177dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="509dp" android:textSize="24sp"/>
    <ImageView
            android:layout_width="218dp"
            android:layout_height="298dp" app:srcCompat="@drawable/sign_up_page_removebg_preview"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintBottom_toTopOf="@+id/LogIn" android:layout_marginStart="38dp"
            app:layout_constraintStart_toEndOf="@+id/backButton" android:layout_marginEnd="97dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/baseline_arrow_back_ios_24"
            android:id="@+id/backButton"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="45dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="34dp" app:layout_constraintEnd_toStartOf="@+id/imageView"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="662dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>