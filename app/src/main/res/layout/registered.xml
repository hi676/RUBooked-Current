<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@drawable/gradient">

    <TextView
            android:text="Registration complete! "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/registeredText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="469dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="243dp"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintHorizontal_bias="0.5"/>
    <Button
            android:text="Continue to Login"
            android:backgroundTint="#F5A522"
            app:cornerRadius="50px"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/RegisteredButton"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="31dp" app:layout_constraintTop_toBottomOf="@+id/registeredText"
            android:layout_marginBottom="30dp" app:layout_constraintBottom_toTopOf="@+id/toolbar"/>
    <ImageView
            android:layout_width="236dp"
            android:layout_height="138dp" app:srcCompat="@drawable/baseline_check_circle_24"
            android:id="@+id/registeredCheck"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="353dp" android:layout_marginBottom="92dp"
            app:layout_constraintBottom_toTopOf="@+id/registeredText" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <androidx.appcompat.widget.Toolbar
            android:layout_width="360dp"
            android:layout_height="43dp"
            android:background="@color/white"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize" android:id="@+id/toolbar"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/RegisteredButton" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp" android:layout_marginEnd="26dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="0dp" app:srcCompat="@drawable/baseline_home_24"
            android:id="@+id/homeview"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.135" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/baseline_calendar_month_24"
            android:id="@+id/calendarview"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.954" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.343"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/baseline_person_24"
            android:id="@+id/profileview"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.954"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.857"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/baseline_location_on_24"
            android:id="@+id/navview"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.954" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/baseline_logout_24"
            android:id="@+id/logoutview"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.954" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.679"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/rubookdLogo"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:layout_marginBottom="261dp"
            app:layout_constraintBottom_toTopOf="@+id/registeredCheck" tools:text="RUBOOK'D"
            android:backgroundTint="#351818" android:foregroundTint="#510707" android:shadowColor="#290404"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="176dp"
            android:layout_marginEnd="176dp" app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>