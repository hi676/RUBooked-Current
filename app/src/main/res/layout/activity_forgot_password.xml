<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ForgotPassword"
        android:background="@drawable/gradient">

    <ImageView
            android:layout_width="185dp"
            android:layout_height="171dp" app:srcCompat="@drawable/forgotpasswordlogo"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="166dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="394dp"/>
    <TextView
            android:text="Enter Email"
            android:layout_width="300dp"
            android:layout_height="66dp"
            android:id="@+id/email" android:textAlignment="center"
            android:fontFamily="@font/ubuntu_bold" android:textSize="48sp" android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="398dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="267dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/typeEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="486dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="@font/ubuntu_bold" android:textColor="#FFFFFF" android:drawableTint="#FFFFFF"
            android:textColorHint="#FFFFFF" app:layout_constraintVertical_bias="0.108"/>
    <Button
            android:text="Submit"
            android:layout_width="152dp"
            android:layout_height="67dp" android:id="@+id/submit"
            android:textAlignment="center"
            android:fontFamily="@font/ubuntu_medium" android:backgroundTint="#F5A522" android:textSize="24sp"
            app:cornerRadius="100px" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="577dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="87dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/baseline_arrow_back_ios_24"
            android:id="@+id/backButton" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="48dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="34dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.025"
            android:layout_marginBottom="659dp" app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>